#LAMMPS Input file generated by Avogadro
# SPC/E Water

# Intialization
units          real
dimension      3
boundary       p p p
atom_style     full

# Atom Definition
read_data      water.data
replicate      1 1 1

#The SPC/E water potential
pair_style      lj/cut/coul/long 9.8 9.8
kspace_style    pppm 1.0e-4
pair_coeff      2 2 0.15535 3.5533
pair_coeff      * 1 0.00000 0.0000
bond_style      harmonic
angle_style     harmonic
dihedral_style  none
improper_style  none
bond_coeff      1 100.00   1.000
angle_coeff     1 100.00 109.47
special_bonds   lj/coul 0.0 0.0 0.5
fix             RigidOHBonds all shake 0.0001 20 0 b 1 a 1

# Settings
velocity       all create 300.0 4928459 rot yes mom yes dist gaussian
fix            ensemble all npt temp 300.0 300.0 50.0 iso 1.0 1.0 500.0

timestep       1.0

# Output
thermo_style   custom step temp ke pe ebond eangle emol epair elong etotal vol press lx
thermo         10

# Dump the trajectory
dump my_dump all custom 10 water.xyz id type x y z fx fy fz vx vy vz
dump_modify my_dump sort id

# Run the simulation
run            10000
